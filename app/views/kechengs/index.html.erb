<p id="notice"><%= notice %></p>

<h1>Courses List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Teacher</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kechengs.each do |kecheng| %>
      <tr>
        <td><%= kecheng.name %></td>
        <td><%= kecheng.teacher %></td>
        <td><%= kecheng.time %></td>
        <td><%= link_to 'Show', kecheng %></td>
        <td><%= link_to 'Edit', edit_kecheng_path(kecheng) %></td>
        <td><%= link_to 'Destroy', kecheng, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_kecheng_path %>

<%= form_tag kechengs_path,method:"get" do %>
<div>
課程名稱:<%= text_field_tag :name %>
老師名稱:<%= text_field_tag :teacher %>
時間:<%= text_field_tag :time %>
</div>
<%= submit_tag "search" %>
<%end%>



